@model TravelDataAccess.Models.Trip
@{
    ViewData["Title"] = "Delete Trip";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm" style="border-radius: 15px; border: none;">
            <div class="card-header" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); color: white; border-radius: 15px 15px 0 0; padding: 20px;">
                <h3 class="mb-0">
                    <span style="font-size: 1.5rem;">üóëÔ∏è</span> Delete Trip
                </h3>
            </div>
            <div class="card-body p-4">
                <div class="alert alert-warning" role="alert">
                    <strong>‚ö†Ô∏è Warning!</strong> Are you sure you want to delete this trip?
                </div>

                <div class="mb-3">
                    <h5 class="fw-bold" style="color: #667eea;">Trip Details</h5>
                    <hr />
                </div>

                <dl class="row">
                    <dt class="col-sm-4">Code:</dt>
                    <dd class="col-sm-8">@Model.Code</dd>

                    <dt class="col-sm-4">Destination:</dt>
                    <dd class="col-sm-8">@Model.Destination</dd>

                    <dt class="col-sm-4">Price:</dt>
                    <dd class="col-sm-8">$@Model.Price.ToString("N2")</dd>

                    <dt class="col-sm-4">Status:</dt>
                    <dd class="col-sm-8">
                        <span class="badge @(Model.Status == "Available" ? "bg-success" : "bg-secondary")">
                            @Model.Status
                        </span>
                    </dd>
                </dl>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="ID" />
                    <div class="d-flex gap-2 mt-4">
                        <button type="submit" class="btn btn-danger flex-fill" style="border-radius: 10px; padding: 12px; font-weight: 600;">
                            üóëÔ∏è Confirm Delete
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary flex-fill" style="border-radius: 10px; padding: 12px; font-weight: 600;">
                            ‚ùå Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
