@model TravelDataAccess.Models.Booking
@{
    ViewData["Title"] = "Create Booking";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm" style="border-radius: 15px; border: none;">
            <div class="card-header" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; border-radius: 15px 15px 0 0; padding: 20px;">
                <h3 class="mb-0">
                    <span style="font-size: 1.5rem;">üé´</span> Create New Booking
                </h3>
            </div>
            <div class="card-body p-4">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <div class="mb-4">
                        <label asp-for="TripID" class="form-label fw-bold">Select Trip</label>
                        <select asp-for="TripID" class="form-select" asp-items="ViewBag.Trips" 
                                style="border-radius: 10px; padding: 12px; font-size: 1rem;">
                            <option value="">-- Choose a destination --</option>
                        </select>
                        <span asp-validation-for="TripID" class="text-danger"></span>
                        <small class="form-text text-muted">
                            Only available trips are shown
                        </small>
                    </div>

                    <div class="mb-4">
                        <label asp-for="BookingDate" class="form-label fw-bold">Booking Date</label>
                        <input asp-for="BookingDate" type="date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")"
                               min="@DateTime.Now.ToString("yyyy-MM-dd")" 
                               style="border-radius: 10px; padding: 12px; font-size: 1rem;" />
                        <span asp-validation-for="BookingDate" class="text-danger"></span>
                        <small class="form-text text-muted">Select a date starting from today</small>
                    </div>

                    <div class="alert alert-info" role="alert">
                        <strong>‚ÑπÔ∏è Note:</strong> Your booking will be created with "Pending" status. You can update the status later from "My Bookings" page.
                    </div>

                    <div class="d-flex gap-2 mt-4">
                        <button type="submit" class="btn btn-primary flex-fill" 
                                style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none; border-radius: 10px; padding: 12px; font-weight: 600;">
                            üé´ Create Booking
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary flex-fill" style="border-radius: 10px; padding: 12px; font-weight: 600;">
                            ‚ùå Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
